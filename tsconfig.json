{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"outDir": "out",
		"lib": [
			"es2018"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"strictPropertyInitialization": false,

		// https://www.typescriptlang.org/tsconfig#Additional_Checks_6176
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noImplicitOverride": true,
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
